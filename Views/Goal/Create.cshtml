@model FitFriend.Models.Goal

@{
    ViewData["Title"] = "Create Goal";
}

<h2>Create New Goal</h2>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="GoalType">Goal Type</label>
                <select asp-for="GoalType" class="form-control" asp-items="ViewBag.GoalTypes">
                    <option value="">-- Select Goal Type --</option>
                </select>
                <span asp-validation-for="GoalType" class="text-danger"></span>
            </div>
    </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CurrentValue">Current Value</label>
                <input asp-for="CurrentValue" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="CurrentValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TargetValue">Target Value</label>
                <input asp-for="TargetValue" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="TargetValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate">Start Date</label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate">End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Create Goal" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
