@model FitFriend.Models.Goal

@{
    ViewData["Title"] = "Delete Goal";
}

<h2>Delete Goal</h2>
<h3>Are you sure you want to delete this goal?</h3>
<div>
    <h4>@Model.GoalType</h4>
    <dl class="row">
        <dt class="col-sm-2">Target Value</dt>
        <dd class="col-sm-10">@Model.TargetValue</dd>
        <dt class="col-sm-2">Current Value</dt>
        <dd class="col-sm-10">@Model.CurrentValue</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="GoalId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
