@model FitFriend.Models.Goal

@{
    ViewData["Title"] = "Goal Details";
}

<h2>Goal Details</h2>
<div>
    <h4>@Model.GoalType</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Target Value</dt>
        <dd class="col-sm-10">@Model.TargetValue</dd>
        <dt class="col-sm-2">Current Value</dt>
        <dd class="col-sm-10">@Model.CurrentValue</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Progress</dt>
        <dd class="col-sm-10">
            @{
                var percent = Model.TargetValue > 0 ? (Model.CurrentValue / Model.TargetValue) * 100 : 0;
            }
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width:@percent%;" aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100">@percent.ToString("0")%</div>
            </div>
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.GoalId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
