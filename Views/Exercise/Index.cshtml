@model IEnumerable<FitFriend.Models.Exercise>

@{
    ViewData["Title"] = "Exercises";
}

<h2>Exercises</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Exercise</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exercise in Model)
        {
            <tr>
                <td>@exercise.Name</td>
                <td>@exercise.Description</td>
                <td>@exercise.ExerciseType</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@exercise.ExerciseId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@exercise.ExerciseId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@exercise.ExerciseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
