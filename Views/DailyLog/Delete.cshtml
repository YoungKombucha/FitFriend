@model FitFriend.Models.DailyLog

@{
    ViewData["Title"] = "Delete Daily Log";
}

<h2>Delete Daily Log</h2>
<h3>Are you sure you want to delete this daily log?</h3>
<div>
    <h4>@Model.Date.ToShortDateString()</h4>
    <dl class="row">
        <dt class="col-sm-3">Steps</dt>
        <dd class="col-sm-9">@Model.Steps</dd>
        <dt class="col-sm-3">Calories Burned</dt>
        <dd class="col-sm-9">@Model.CaloriesBurned</dd>
        <dt class="col-sm-3">Water Intake (oz)</dt>
        <dd class="col-sm-9">@Model.WaterIntake</dd>
        <dt class="col-sm-3">Sleep Hours</dt>
        <dd class="col-sm-9">@Model.SleepHours</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="LogId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
